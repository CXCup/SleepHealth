<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="主题"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="4dp"
            />

    </LinearLayout>


    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="none">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#f4eaea">
    <LinearLayout
        android:id="@+id/l_habit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        
        <ImageView
            android:id="@+id/habit"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@mipmap/habit"
            android:layout_marginLeft="6dp"/>
        <TextView
            android:id="@+id/t_habit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="好习惯"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="5dp"
            />
        
    </LinearLayout>
        <LinearLayout
            android:id="@+id/l_sport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/sport"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@mipmap/sport"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/t_sport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="去健身"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/l_sleep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/sound_sleep"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@mipmap/sleep"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/t_sleep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="睡眠空间"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/l_health"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/health"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@mipmap/health"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/t_health"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="养生之道"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/l_food"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/food"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@mipmap/food"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/t_food"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="健康饮食"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                />

        </LinearLayout>

    </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#9dc9c9c9"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="10dp">

        <ListView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fastScrollEnabled="true">


        </ListView>
    </LinearLayout>


</LinearLayout>