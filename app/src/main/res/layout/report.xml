<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5c5b5b">

    <include
        layout="@layout/actionbar"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="#ffffff"
            android:text="睡眠效率:"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <ProgressBar
                android:id="@+id/efficiency_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/efficiency_text"
                android:progressDrawable="@drawable/totalbar"
                android:layout_marginRight="10dp"
                style="@android:style/Widget.ProgressBar.Horizontal"
                />
            <TextView
                android:id="@+id/efficiency_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:textSize="24sp"
                android:textColor="#d12f2f"
                android:text="1%"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/ic_stat_notification"/>
            <TextView
                android:id="@+id/total_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textColor="#ffffff"
                android:layout_gravity="center_vertical"
                android:text="12:00 - 13:00"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/ic_values_duration"/>
                <TextView
                    android:id="@+id/sleep_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:text="20 min"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/ic_fall_asleep"/>
                <TextView
                    android:id="@+id/awake_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="#ffffff"
                    android:layout_marginLeft="20dp"
                    android:text="10 min"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/awake_time2"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:enabled="false"
                android:background="#d12f2f"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:textSize="10sp"
                android:textColor="#000000"
                android:text="0 min"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="50dp"
                android:textColor="#ffffff"
                android:text="醒着:"/>
            <ProgressBar
                android:id="@+id/awake_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/awake_text"
                android:layout_marginRight="10dp"
                android:progressDrawable="@drawable/totalbar"
                style="@android:style/Widget.ProgressBar.Horizontal"/>
            <TextView
                android:id="@+id/awake_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:textColor="#ffffff"
                android:text="1%"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <Button
                android:id="@+id/light_sleep_time"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:enabled="false"
                android:background="#e1ca33"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:textSize="10sp"
                android:textColor="#000000"
                android:text="0 min"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="50dp"
                android:textColor="#ffffff"
                android:text="浅睡:"/>
            <ProgressBar
                android:id="@+id/light_sleep_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/light_sleep_text"
                android:layout_marginRight="10dp"
                android:progressDrawable="@drawable/light_sleep_bar"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_marginLeft="90dp"/>
            <TextView
                android:id="@+id/light_sleep_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:textColor="#ffffff"
                android:text="1%"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <Button
                android:id="@+id/deep_sleep_time"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:enabled="false"
                android:background="#42ae3a"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:textSize="10sp"
                android:textColor="#000000"
                android:text="0 min"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="50dp"
                android:textColor="#ffffff"
                android:text="深睡:"/>
            <ProgressBar
                android:id="@+id/deep_sleep_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/deep_sleep_text"
                android:layout_marginRight="10dp"
                android:progressDrawable="@drawable/deep_sleep_bar"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_marginLeft="90dp"/>
            <TextView
                android:id="@+id/deep_sleep_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:textColor="#ffffff"
                android:text="1%"/>

        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">
            <Button
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_back"
                android:text="查看建议"/>
            <Button
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@drawable/button_back"
                android:text="睡眠记录"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>